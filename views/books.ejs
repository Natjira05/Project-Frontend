      <tr>
        <th>ID_Format</th>
        <th>Music Format</th>
        <th>Edit</th>
      </tr>
      <% for(var i = 0 ; i < formats.length; i++) { %>
      <tr>
        <td><%= formats[i].title %></td>
        <td><%= formats[i].author %></td>
        <td>
          <a href="/update/<%= formats[i].id %>" >Edit</a>
        </td>
      </tr>
    <% } %>
    </table>
</center>
<br>
<br>
    <center>
    <a href="/create" ><font face ="Open Sans" size="4" color="red">Create New Music Format</font></a>
    </center>

    <br>
<br>
<br>
